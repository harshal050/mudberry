<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Mudberry Studio</title>
    <meta content="" name="description">
    <meta content="" name="keywords">
    <!-- Favicons -->
    <link href="Final Logo.jpg" rel="icon">  
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 p-4">
    <div class="max-w-md mx-auto bg-white p-6 rounded-md shadow-md">
        <h1 class="text-2xl font-bold mb-4">Pottery Class Booking</h1>
        <form action="#" method="post" class="space-y-4">
            <div>
                <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                <input type="email" id="email" name="email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
            </div>
            <div>
                <label for="phone" class="block text-sm font-medium text-gray-700">Phone Number</label>
                <input type="tel" id="phone" name="phonenumber" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
            </div>
            <div>
                <label for="date" class="block text-sm font-medium text-gray-700">Date</label>
                <input type="date" id="date" name="date" onchange="updateTimeSlots()" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
            </div>
            <div>
                <label for="people" class="block text-sm font-medium text-gray-700">Number of People</label>
                <input type="number" id="people" name="people" min="1" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
            </div>
            <div>
                <label for="slot" class="block text-sm font-medium text-gray-700">Preferred Time Slot</label>
                <select id="slot" name="slot" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
                    <!-- Time slots will be dynamically populated here -->
                </select>
            </div>
            <div>
                <p class="text-sm text-gray-600">Sessions are available throughout the week, with three convenient time slots on weekdays (3 pm - 4 pm, 6 pm - 7 pm, and 7 pm - 8 pm, excluding Wednesdays) and flexible hours on Sundays from 11 am to 6 pm.</p>
                <p class="text-sm text-gray-600">To secure your preferred time, advance booking is essential, requiring a confirmation charge of ₹1000.</p>
            </div>
            <!-- Additional content -->
            <div id="paymentInfo">
                <p class="text-sm text-gray-600">The session fee of ₹1000 per person ensures an individualized experience...</p>
            </div>
            <div>
                <p id="totalPayment" class="text-lg font-bold text-indigo-700"></p>
            </div>
            <div>
                <button type="submit" class="bg-indigo-500 text-white px-4 py-2 rounded-md hover:bg-indigo-600 focus:outline-none focus:ring focus:ring-indigo-200 focus:ring-opacity-50">Book Now</button>
            </div>
        </form>
    </div>

    <script>
    function calculatePayment() {
      const people = parseInt(document.getElementById('people').value);
      let payment = 1000; // Default payment

      if (people >= 4 && people < 9) {
        payment = 900;
      } else if (people >= 9) {
        payment = 800;
      }

      const totalPayment = people * payment;
      return totalPayment;
    }

    function updatePaymentInfo() {
      const people = parseInt(document.getElementById('people').value);
      const totalPayment = calculatePayment();
      const paymentInfo = document.getElementById('paymentInfo');
      const totalPaymentElement = document.getElementById('totalPayment');

      paymentInfo.innerHTML = `
        <p class="text-sm text-gray-600">The session fee of ₹1000 per person ensures an individualized experience...</p>
        <p class="text-sm text-gray-600">For ${people} participants:</p>
        <p class="text-lg font-bold text-indigo-700">Total Payment: ₹${totalPayment}</p>
      `;
    }

    document.getElementById('people').addEventListener('input', updatePaymentInfo);

    function updateTimeSlots() {
      const dateInput = document.getElementById('date');
      const slotSelect = document.getElementById('slot');
      const selectedDate = new Date(dateInput.value);
      const dayOfWeek = selectedDate.getDay(); // 0 (Sunday) to 6 (Saturday)

      slotSelect.innerHTML = ''; // Clear previous options

      if (dayOfWeek === 0) { // Sunday
        for (let i = 11; i <= 17; i++) {
          const startTime = i.toString().padStart(2, '0') + ":00";
          const endTime = (i + 1).toString().padStart(2, '0') + ":00";
          const option = document.createElement('option');
          option.value = startTime + '-' + endTime;
          option.textContent = `${startTime} - ${endTime}`;
          slotSelect.appendChild(option);
        }
      } else {
        // Default time slots for other days
        const defaultSlots = ['3 pm - 4 pm', '6 pm - 7 pm', '7 pm - 8 pm'];
        defaultSlots.forEach(slot => {
          const option = document.createElement('option');
          option.value = slot;
          option.textContent = slot;
          slotSelect.appendChild(option);
        });
      }
    }

    // Function to update time slots on page load
    window.addEventListener('load', updateTimeSlots);

    // Function to update time slots on date change
    document.getElementById('date').addEventListener('change', updateTimeSlots);
    
  </script>
</body>
</html>
