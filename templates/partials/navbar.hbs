<script>
    // Check if the user is logged in or not
    const isLoggedIn = true; // Replace with your logic to check if the user is logged in

    document.addEventListener("DOMContentLoaded", function () {
        const navList = document.getElementById("navList");
        const registerLink = document.querySelector('a[href="/register"]');
        const loginLink = document.querySelector('a[href="/login"]');

        if (isLoggedIn) {
            // User is logged in, remove register and login buttons, and add logout button
            if (registerLink && loginLink) {
                navList.removeChild(registerLink.parentElement);
                navList.removeChild(loginLink.parentElement);

                const logoutLink = document.createElement("li");
                logoutLink.innerHTML = '<a class="nav-link scrollto" href="/logout">Logout</a>';
                navList.appendChild(logoutLink);
            }
        }
    });
</script>
